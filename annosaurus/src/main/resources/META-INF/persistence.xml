<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="annosaurus" transaction-type="RESOURCE_LOCAL">
        <description>Annosaurus Data Model</description>
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- <shared-cache-mode>NONE</shared-cache-mode> -->
        <!-- Converters -->
        <class>org.mbari.vars.annotation.repository.jpa.DurationConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.InstantConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.OptionConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.FloatOptionConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.DoubleOptionConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.URIConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.URLConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.UUIDConverter</class>
        <class>org.mbari.vars.annotation.repository.jpa.TimecodeConverter</class>

        <!-- Entities -->
        <class>org.mbari.vars.annotation.repository.jpa.ImagedMomentEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.ObservationEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.AssociationEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.ImageReferenceEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.CachedAncillaryDatumEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.CachedVideoReferenceInfoEntity</class>
        <class>org.mbari.vars.annotation.repository.jpa.IndexEntity</class>

        <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.connection-pool.default.initial" value="2" />
            <property name="eclipselink.connection-pool.default.max" value="4" />
            <property name="eclipse.weaving" value="true" />
        </properties>
    </persistence-unit>
</persistence>